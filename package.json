{
  "name": "alfredoconnect",
  "productName": "AlfredoConnect",
  "version": "0.0.1",
  "description": "Driver station for Bluetooth serial communication.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "AlfredoConnect",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "alfredo.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "alfredo.icns",
      "identity": "Alfredo Electronics",
      "type": "distribution"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "alfredo.ico",
      "uninstallerIcon": "alfredo.ico"
    },
    "dmg": {
      "icon": "alfredo.icns"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlfredoElectronics/AlfredoConnect-Desktop.git"
  },
  "author": "Kaiz Akhtar",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/AlfredoElectronics/AlfredoConnect-Desktop/issues"
  },
  "homepage": "https://github.com/AlfredoElectronics/AlfredoConnect-Desktop#readme",
  "devDependencies": {
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^1.11.0"
  },
  "dependencies": {
    "jquery": "^3.6.0",
    "jquery-sortablejs": "^1.0.1",
    "materialize-css": "^1.0.0",
    "serialport": "^8.0.8",
    "sortablejs": "^1.13.0"
  }
}
